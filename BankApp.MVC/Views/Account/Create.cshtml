@model UserListModel

<div class="row">
	<div class="col-6">
		<h3>Hesap Eklenecek Bilgileri</h3>
		<p>
			 User Name:@Model.Name
		</p>
		<p>
			User's Surname':@Model.Surname
		</p>
		<p>
			Number of Active Accounts Of The User: <getAccountCount application-user-id="@Model.Id"></getAccountCount>
		</p>
	</div>
	<div class="col-6">
		<h4>Adding Process</h4>
		<form method="post" asp-action="Create" asp-controller="Account">
			<input type="hidden" name="ApplicationUserId" value="@Model.Id" />
			<div class="mb-3">
				<label class="form-label">Account Number:</label>
				<input type="number" name="AccountNumber" class="form-control"/>
			</div>
			<div class="mb-3">
				<label class="form-label">Balance</label>
				<input type="number" name="Balance" class="form-control"/>
			</div>
			<div class="mb-3">
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
		</form>
	</div>
</div>