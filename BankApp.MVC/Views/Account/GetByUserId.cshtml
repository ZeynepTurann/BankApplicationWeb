@model List<AccountListModel>

<div class="row">
  <div class="col-6">
        <h5>User Information</h5>
	<div class="card">
          <div class="card-body">
             <p class="card-text">@ViewBag.FullName</p>
              <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back To List Of Users</a>
             </div>
   </div>
</div>
		<div class="col-6">
            <h5>Account Information </h5>
            @if(Model.Count>0)
            {
                foreach(var account in Model)
                {
                 <div class="card">
               <div class="card-body">
             <h5 class="card-title">Account Number: @account.AccountNumber</h5>
             <p class="card-text">Balance: @account.Balance</p>
              <a asp-action="SendMoney" asp-controller="Account" asp-route-accountId="@account.Id" class="btn btn-primary">Send Money</a>
              </div>
           </div>
              }
            }
            else{
                <div class="bg-danger text-white text-center">
                    This User Does Not Have An Account
                </div>
            }
         
		</div>
</div>
