@model SelectList


@*
	senderId  (who is sending money?)
	AccountId (Which account are you sending money to?)
	Amount (How much money are you sending?)

*@
<div class="mt-3">
	<form asp-action="SendMoney" method="post" class="w-75 mx-auto">
	<input type="hidden" name="SenderId"  value="@ViewBag.SenderId"/>
	<div class="mb-3">
		<label>Receiver Account Number:</label>
		<select class="custom-select" asp-items="@Model" name="AccountId"> 
		</select>
	</div>
	<div class="mb-3">
		<label>Amount:</label>
		<input type="number" name="Amount" class="form-control" />

	</div>
		<div class="mb-3">
             <button type="submit" class="btn btn-primary">Send Money</button>
	</div>
</form>
</div>

